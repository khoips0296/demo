@model IEnumerable<TestFinal.Models.CustomerType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p class="btn btn-primary">

    @Html.ActionLink("Create New", "Create")
</p>
<div class="">
   
</div>
<table class="table">
    <tr>
        <th>
            #
        </th>
